---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="color-scheme" content="dark light" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	@font-face {
		font-family: 'Montserrat';
		font-style: regular;
		font-weight: 400;
		src:
			url('./fonts/Montserrat-Regular.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Montserrat';
		font-style: medium;
		font-weight: 500;
		src:
			url('./fonts/Montserrat-Medium.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Montserrat';
		font-style: semibold;
		font-weight: 600;
		src:
			url('./fonts/Montserrat-SemiBold.woff2') format('woff2');
	}

	@font-face {
		font-family: 'Unbounded';
		font-style: regular;
		font-weight: 400;
		src: 
			url('./fonts/Unbounded-Regular.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Unbounded';
		font-style: medium;
		font-weight: 500;
		src: 
			url('./fonts/Unbounded-Medium.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Unbounded';
		font-style: semibold;
		font-weight: 600;
		src: 
			url('./fonts/Unbounded-SemiBold.woff2') format('woff2');
	}
	

	:root {
		--SOFT-1: #E3F6E9;
		--SOFT-2: #BCEAD5;

		/* --SOFT-3: #9ED5C5;
		--SOFT-4: #8EC3B0; */

		--NORMAL-1: #5cd8b1;
		--NORMAL-2: #39737f;

		--HARD-1: #1b3c4f;
		--HARD-2: #112031;

		/* 60% of the page - Background */
		--primary-l: #FFF;
		--primary-d: #DDD;
		/* 30% of the page - Text */
		--secondary-l: #999;
		--secondary-d: #666;
		/* 10% of the page - CTA, Buttons, highlights, hyperlinks */
		--accent-l: #333;
		--accent-d: #000;

	}

	@media (prefers-color-scheme: light) {
		:root {
			--primary-l: var(--SOFT-1);
			--primary-d: var(--SOFT-2);
			--secondary-l: var(--HARD-2);
			--secondary-d: var(--HARD-1);
			--accent-l: var(--NORMAL-2);
			--accent-d: var(--NORMAL-1);
		}
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--primary-l: var(--HARD-2);
			--primary-d: var(--HARD-1);
			--secondary-l: var(--SOFT-1);
			--secondary-d: var(--SOFT-2);
			--accent-l: var(--NORMAL-1);
			--accent-d: var(--NORMAL-2);
		}
	}

	html {
		font-family: 'Montserrat', system-ui, sans-serif;
		color: var(--secondary-l);
		background-color: var(--primary-l);
	}
	body, figure, h1, h2, h3, h4, h5, p {
		margin: 0;
		padding: 0;
	}
	h1, h2 {
		font-family: 'Unbounded';
	}
	a {
		text-decoration: none;
	}
	button {
		appearance: none;
		border: none;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	::-webkit-scrollbar {
		width: 0.75rem;
		height: 0.50rem;
	}

	::-webkit-scrollbar-track {
		background: var(--accent-d);
		border-radius: 100vw;
	}

	::-webkit-scrollbar-thumb {
		background: var(--accent-l);
		border-radius: 100vw;
		border: .18rem solid var(--accent-d);
		margin-block: .4rem;
	}

	@supports (scrollbar-color: red blue;) {
		* {
			scrollbar-color: hsl(120 90% 30% / 1) hsl(120 70% 50% / 1);
			scrollbar-width: thin;
		}
	}

	.icon-hover:hover {
		fill: var(--accent-l);
	}
</style>
