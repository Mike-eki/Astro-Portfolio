---
const { isRow = false, isCol = false } = Astro.props;
---

<div class:list={[
    "item",
    {
        "double-row": isRow,
        "double-column": isCol,
    }
]}>
        <slot/>
</div>

<style>
  .item {
    width: 100%;
    height: 100%;
    border-radius: 0.33rem;
    background-color: var(--secondary-d);
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--primary-d);
    background-image: radial-gradient(
      at center,
      var(--accent-d) 0%,
      var(--primary-l) 300%
    );
  }
  .double-row {
    grid-row: span 2;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    background: var(--accent-l);
    background-image: linear-gradient(
      360deg,
      var(--primary-d),
      var(--accent-d)
    );
  }
  .double-column {
    grid-column: span 2;
    justify-content: space-around;
    background: var(--accent-d);
    background-image: linear-gradient(
      360deg,
      var(--primary-d),
      var(--accent-d)
    );
  }
</style>
