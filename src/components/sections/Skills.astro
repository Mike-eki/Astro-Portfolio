---
import Pill from "../Pill.astro";
import skillsJson from "../../data/data.json";
import BaseSection from "../BaseSection.astro";
const width = "1.5rem";
const {
  skills: { techs, tools },
} = skillsJson;
---

<BaseSection title="Habilidades">
    {
      techs.map(({ iconName, fill, color, content }) => (
        <Pill {iconName} {fill} {color} {width}>
          {content}
        </Pill>
      ))
    }
    {
      tools.map(({ iconName, fill, color, content }) => (
        <Pill {iconName} {fill} {color} {width}>
          {content}
        </Pill>
      ))
    }
</BaseSection>


<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  aside {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
